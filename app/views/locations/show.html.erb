<h1><%= @trip.name %> -- <%= @location.name %></h1>
<h5><%= link_to "Edit", edit_trip_location_path(@trip, @location) %> |
<%= link_to 'Delete', trip_location_path(@trip), method: :delete, data: {confirm: 'Do you want to delete this stop?'} %></h5>
<hr>
<div class='showpage'>
<% if @location.length %>
  <h4>Duration: <%= @location.length %></h4>
<% end %>
<% if @location.activities %>
  <h4>Activities: <i><%= @location.activities %></i></h4>
<% end %>
<% if @address %>
  <h4>Address:<%= @address.city %>, <%=@address.state %>, <%=@address.zip %>
<% else %>
 <h5><%= link_to 'Add Address', new_trip_location_address_path(@trip, @location)%>
<% end %>
</div>
<hr>
<h5><%= link_to "<<Back", trip_locations_path(@trip) %></h5>
