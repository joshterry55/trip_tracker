

<div>
<%= form_for @trip do |f| %>
  <fieldset>
    <legend>Trip Form</legend>
    <%= f.label :name %>:
    <%= f.text_field :name, required: true %>
    <br><br>
    <%= f.label :date %>:
    <%= f.text_field :date %>
    <br><br>
    <%= f.label :details %>:
    <%= f.text_area :friends %>
    <br><br>
    <%= f.submit 'Add Trip' %>
  </fieldset>
<% end %>
</div>
