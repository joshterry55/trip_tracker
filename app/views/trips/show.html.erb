<h1><%= @trip.name %></h1>
<h5><%= link_to 'Edit', edit_trip_path(@trip) %> | <%= link_to 'Delete', trip_path(@trip), method: :delete, data: {confirm: 'Do you want to delete this trip?'} %></h5>
<hr>
<div class="showpage">
<% if @trip.friends %>
  <h4>Details: <i><%= @trip.friends %></h4></i>
<% end %>

<% if @trip.date %>
  <h4>Date: <%= @trip.date %></h4>
<% end %>

<h5><%= link_to 'See my stops', trip_locations_path(@trip) %></h5>
</div>
<hr>
<h5><%= link_to '<< Back', trips_path %></h5>
